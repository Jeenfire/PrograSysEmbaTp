<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

    >
        <HorizontalScrollView
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="200dp" android:id="@+id/presentation">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:id="@+id/list_presentation" android:orientation="horizontal"


            >
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxWidth="200dp"
                        android:maxHeight="200dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/kingdom"
                        android:id="@+id/imgBtn1"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxWidth="200dp"
                        android:maxHeight="200dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/smgt"
                        android:id="@+id/imgBtn2" android:layout_weight="1"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxWidth="200dp"
                        android:maxHeight="200dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mha"
                        android:id="@+id/imgBtn3" android:layout_weight="1"/>
            </LinearLayout>
        </HorizontalScrollView>
        <GridView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:numColumns="3"
                android:verticalSpacing="5dp"
                android:horizontalSpacing="5dp"
                android:background="@color/cardview_dark_background"
                android:id="@+id/list"
                tools:listitem="@layout/grid_item"

        />
    </LinearLayout>
</layout>
